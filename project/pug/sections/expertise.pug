.expertise.no-m-p
 .container-3  
  h2(class="h2-heading text-center" data-aos="fade" data-aos-duration="2000") Our Expertise 
  p(class="ft-normal size-18 text-center" data-aos="fade-up"   data-aos-duration="1500") Innovative VideoAnalytics Solutions
  .expertise__slider.mt-5
   .swiper.swiper-container
    .swiper-wrapper
     each val in cards  
      .swiper-slide
       div(class=`expertise__card ${val.class}`)
        span.expertise__card--before.d-block
        .expertise__content 
         .col-6
          h2(class="text-white position-relative z-3 size-45 mb-3")=val.title 
         .col-xl-6.col-lg-5.col-md-8.expertise__card--txt
          p(class="fw-lighter text-white position-relative z-3 size-17")=val.text
        span.expertise__card--after.d-block
        
  .swiper-pagination
    .swiper-button-prev
    .swiper-button-next




















  //
   .glide
    .glide__track(data-glide-el='track')
      div.glide__slides
       each val in cards  
        div.glide__slide
         div(class=`expertise__card ${val.class}`)
          span.expertise__card--before.d-block
          .expertise__content 
           .col-6
            h2(class="text-white position-relative z-3 size-45 mb-3")=val.title 
           .col-lg-7.col-12.expertise__card--txt
            p(class="fw-lighter text-white position-relative z-3 size-17")=val.text
          span.expertise__card--after.d-block
        
    .glide
      .glide__arrows(data-glide-el='controls')
        button.glide__arrow.glide__arrow--prev(data-glide-dir='<') 
        button.glide__arrow.glide__arrow--next(data-glide-dir='>') 
      .glide__bullets(data-glide-el='controls[nav]')
        button.glide__bullet(data-glide-dir='=0')
        button.glide__bullet(data-glide-dir='=1')
        button.glide__bullet(data-glide-dir='=2')

   
