- var cards =  [{title:'Motion Detection',text:'Capture and analyze movement patterns for enhanced security and automation.',class:'motion'},{title:'Object Classification',text:'Identify and classify objects with precision, enabling actionable insights across various applications.',class:'object'},{title:'Behavior Tracking',text:'Track behaviors to enhance understanding of patterns and identify anomalies.',class:'track'},{title:'Incident Detection',text:'Detect real-time incidents to support immediate action and improve situational awareness.',class:'incident'},{title:'Traffic Monitoring',text:'Optimize traffic flow and safety with advanced monitoring and real-time analytics..',class:'traffic'}]
